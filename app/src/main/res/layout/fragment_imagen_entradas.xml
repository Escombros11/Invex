<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".entrada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/borde_azul_redondo"
            android:layout_weight="90">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Categoría:"
                        android:textColor="@color/marinoSmart"
                        android:textSize="10dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="60"/>

                    <TextView
                        android:id="@+id/txtCategoríaDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text=""
                        android:textColor="@color/azulSmart"
                        android:textSize="9dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="40"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Descripción:"
                        android:textColor="@color/marinoSmart"
                        android:textSize="10dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="60"/>

                    <TextView
                        android:id="@+id/txtDescripcionDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text=""
                        android:textColor="@color/azulSmart"
                        android:textSize="9dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="40"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtApi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Api:"
                    android:textColor="@color/marinoSmart"
                    android:textSize="10dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="60"/>

                <TextView
                    android:id="@+id/txtApiDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/azulSmart"
                    android:textSize="9dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="40"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Link:"
                    android:textColor="@color/marinoSmart"
                    android:textSize="10dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="60"/>

                <TextView
                    android:id="@+id/txtLinkDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/azulSmart"
                    android:textSize="9dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="40"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVisitarLink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Visitar link"
                    android:backgroundTint="@color/azulSmart"
                    android:textSize="10dp"
                    android:textColor="@color/marinoSmart"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>